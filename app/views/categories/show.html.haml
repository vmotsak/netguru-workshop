-content_for :breadcrumb do
  %li= link_to 'Categories', categories_path

.col-xs-9
  %h3
    = category.name
    = link_to content_tag(:span,'',class:'glyphicon glyphicon-edit'), edit_category_path(category)
.col-xs-3
  %h3 New product
.col-xs-9
  %p
    - if category.products.empty?
      %p No products
    - else
      %table.table
        %tr
          %th Product
          %th Description
          %th Price
          %th User
          %th
          %th

        - products.each do |product|
          %tr
            %td= link_to product.title, category_product_path(product.category, product)
            %td= product.description
            %td= product.price
            %td= product.author
            %td= link_to content_tag(:span,'',class:'glyphicon glyphicon-edit'), edit_category_product_path(product.category, product)
            %td= link_to content_tag(:span,'',class:'glyphicon glyphicon-remove'), category_product_path(product.category, product), method: :delete, data: { confirm: 'Are you sure?' }
.col-xs-3
  = render 'products/form'

